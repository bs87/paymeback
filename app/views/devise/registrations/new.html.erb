<h2>Registrieren</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :nachname %><br />
  <%= f.text_field :lastname %></div>

  <div><%= f.label :vorname %><br />
  <%= f.text_field :firstname %></div>

  <div><%= f.label :Geburtsdatum %><br />
  <%= f.date_select :dateofbirth, :order => [:day, :month, :year], :start_year => 1900, :end_year => 2013  %></div>

  <div><%= f.label :Strasse_und_Hausnummer %><br />
  <%= f.text_field :adress %></div>

  <div><%= f.label :Wohnort %><br />
  <%= f.text_field :city %></div>

  <div><%= f.label :Postleitzahl %><br />
  <%= f.text_field :zip %></div>

  <div><%= f.label :passwort %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :passwort_wiederholen %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Registrieren" %></div>
<% end %>

<%= render "devise/shared/links" %>
