<h2>Registrieren</h2>
 
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :id => 'email', :autofocus => true %></div>
  <br />

 <div><%= f.label :Vorname %>
  <%= f.text_field :firstname , :id => 'firstname'%></div>
  <br />

  <div><%= f.label :Nachname %>
  <%= f.text_field :lastname , :id => 'lastname'%></div>
  <br />
  
 
  <div><%= f.label :Geburtsdatum %>
  <%= f.date_select :dateofbirth, :id => 'dateofbirth', :order => [:day, :month, :year], :start_year => 1900, :end_year => 2013  %></div>
  <br />
 
  <div><%= f.label :Strasse_und_Hausnummer %>
  <%= f.text_field :adress, :id => 'adress' %></div>
  <br />
 
  <div><%= f.label :Postleitzahl %>
  <%= f.text_field :zip, :id => 'zip' %></div>
  <br />
 
  <div><%= f.label :Wohnort %>
  <%= f.text_field :city, :id => 'city' %></div>
  <br />
 
  <div><%= f.label :passwort %>
  <%= f.password_field :password, :id => 'password' %></div>
  <br />
  
  <div><%= f.label :passwort_wiederholen %>
  <%= f.password_field :password_confirmation, :id => 'password_confirmation' %></div>
  <br />
  
  <div><%= f.label :Profilfoto_hochladen %>
  <%= f.file_field :photo, :id => 'photo'%>
  </div>

<br/>
<br/>
  <div><%= f.submit "Registrieren", :class => 'btn btn-success'%></div>
<% end %>

