<h2>Registrieren</h2>
 
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>
  <br />

  <div><%= f.label :nachname %>
  <%= f.text_field :lastname %></div>
  <br />
  
  <div><%= f.label :vorname %>
  <%= f.text_field :firstname %></div>
  <br />
 
  <div><%= f.label :Geburtsdatum %>
  <%= f.date_select :dateofbirth, :order => [:day, :month, :year], :start_year => 1900, :end_year => 2013  %></div>
  <br />
 
  <div><%= f.label :Strasse_und_Hausnummer %>
  <%= f.text_field :adress %></div>
  <br />
 
  <div><%= f.label :Postleitzahl %>
  <%= f.text_field :zip %></div>
  <br />
 
  <div><%= f.label :Wohnort %>
  <%= f.text_field :city %></div>
  <br />
 
  <div><%= f.label :passwort %>
  <%= f.password_field :password %></div>
  <br />
  
  <div><%= f.label :passwort_wiederholen %>
  <%= f.password_field :password_confirmation %></div>
  <br />
  
  <div><%= f.label :Profilfoto_hochladen %>
  <%= f.file_field :photo, :class => 'btn btn-primary icon-picture'%>
  </div>

<br/>
<br/>
  <div><%= f.submit "Registrieren", :class => 'btn btn-success'%></div>
<% end %>
<%= render "devise/shared/links" %>
