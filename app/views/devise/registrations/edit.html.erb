<h2>Einstellungen</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :Passwort %> <i>(frei lassen, wenn Sie es nicht ändern wollen)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label :passwort_wiederholen %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :aktuelles_Passwort %> <i>(bitte geben Sie Ihr aktuelles Passwort ein um die Änderungen zu bestätigen)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.label :Vorname %><br />
  <%= f.text_field :firstname %></div>

  <div><%= f.label :Nachname %><br />
  <%= f.text_field :lastname %></div>
  
  <div><%= f.label :Geburtsdatum %><br />
  <%= f.date_select :dateofbirth, :order => [:day, :month, :year], :start_year => 1900, :end_year => 2013  %></div>

  <div><%= f.label :Strasse_und_Hausnummer %><br />
  <%= f.text_field :adress %></div>

  <div><%= f.label :Wohnort %><br />
  <%= f.text_field :city %></div>

  <div><%= f.label :Postleitzahl %><br />
  <%= f.text_field :zip %></div>



  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Account löschen</h3>

<p>Unzufrieden? <%= button_to "Account dauerhaft löschen", registration_path(resource_name), :data => { :confirm => "Sind Sie sicher?" }, :method => :delete %></p>

<%= link_to "zurück", :back %>
