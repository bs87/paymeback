<%= form_for (@friend, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @friend.errors.any? %>
    <div id="error_explanation">
      <h2>Eintrag konnte nicht erstellt werden! <%= @friend.errors.count %> Fehler wurden gefunden </h2>

      <ul>
      <% @friend.errors.full_messages.each do |msg| %>
      
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :friend_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :friend_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :accepted, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :accepted, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                friends_path, :class => 'btn' %>
  </div>
<% end %>
