<script>

      
  $(function() {
 
    $( "#freund" ).autocomplete({
      minLength: 0,
      source: <%= raw "#{@Fullname.to_json}" %>,
     focus: function( event, ui ) {
        $( "#freund" ).val( ui.item.label );
        return false;
      },
      select: function( event, ui ) {
        $( "#email" ).val( ui.item.email );
        $( "#betrag" ).val( ui.item.label );
        return false;
      }
    })
    .data( "ui-autocomplete" )._renderItem = function( ul, item ) {
      return $( "<li>" )
        .append( "<a>" + item.label  +" " + item.icon + "</a>" )
        .appendTo( ul );
    };
  }); 
</script>


