
<%= form_for @debit, :html => { :class => 'form-horizontal' } do |f| %>  
  <% if @debit.errors.any? %>
    <div id="error_explanation">
      <h2>Eintrag konnte nicht erstellt werden! <%= @debit.errors.count %> Fehler wurden gefunden </h2>

      <ul>
      <% @debit.errors.full_messages.each do |msg| %>
      
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" />
