<%- model_class = Debit -%>
<div class="page-header">
  <h1><%=t '.Zahlungsübersicht' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Person) %></th>
      <th><%= model_class.human_attribute_name(:Verliehen) %></th>
      <th><%= model_class.human_attribute_name(:Geliehen) %></th>
      <!--<th><%=t '.actions', :default => t("helpers.actions") %></th>-->
    </tr>

  </thead>
  <tbody>
    <% @debits.each do |debit| %>
    <% freund = User.where('email like ?',debit.emailuser2).first%>
      <tr>
        <td><a href='/debits/?user=<%=debit.emailuser2%>'><%= freund.firstname+' '+freund.lastname %></td>
<% if debit.art=='Verliehen'%>
        <td id='verliehen'><%= link_to debit.betrag.to_s+'€', debit%></td>
        <td></td>
<%else%>
        <td>
        <td id='geliehen'><%= link_to debit.betrag.to_s+'€', debit%></td>
    <%end%>
        <td>
          <%= link_to t('.Editieren'),
                      edit_debit_path(debit), :class => 'btn btn-mini' %>
          <%= link_to t('.Löschen'),
                      debit_path(debit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.Neuer Eintrag', :default => t("helpers.links.new")),
            new_debit_path,
            :class => 'btn btn-success' %>
