  <tr>
    <td><%= debit.emailcurrentuser %></td>
    <td><%= debit.emailuser2 %></td>
    <td><%= debit.betrag %></td>
    <td><%= debit.datum %></td>
    <td><%= debit.info %></td>
    <td><%= debit.gezahlt %></td>
    <td><%= debit.art %></td>
    <td><%= link_to 'Show', debit %></td>
    <td><%= link_to 'Edit', edit_debit_path(debit) %></td>
    <td><%= link_to 'Destroy', debit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
