<h1>Listing debts</h1>

<table>
  <tr>
    <th>Vorname</th>
    <th>Nachname</th>
    <th>Betrag</th>
    <th>Info</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @debts.each do |debt| %>
  <tr>
    <td><%= debt.Vorname %></td>
    <td><%= debt.Nachname %></td>
    <td><%= debt.Betrag %></td>
    <td><%= debt.info %></td>
    <td><%= link_to 'Show', debt %></td>
    <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
    <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

